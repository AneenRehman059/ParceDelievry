<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:id="@+id/design_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rv_item_design"
    tools:context=".CallanList">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/challan_time"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_regular"
                android:textStyle="bold"
                android:padding="10dp"

                />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CN#:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_bold"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parccel_no"
                android:text="0110435059"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/gilroy_bold"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_bold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/status"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_bold"
            android:text="Delievered"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/why"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason:"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_bold"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Nodel_reason"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/gilroy_bold"
            android:text=""
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_post"
                android:paddingStart="90dp"
                android:paddingEnd="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="Post"/>

</LinearLayout>